<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiProject.MenuPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Меню"
    BackgroundImageSource="bg_menu.jpg">

    <ContentPage.Resources>
        <ResourceDictionary>

            <!-- Большие кнопки меню (как у тебя было) -->
            <Style x:Key="MenuButton" TargetType="Button">
                <Setter Property="HeightRequest" Value="56" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#6A5AE0" Offset="0" />
                            <GradientStop Color="#8A7FF0" Offset="1" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Padding" Value="18,12"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="#77000000" Offset="0,4" Radius="12" />
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Карточка под кнопками (как у тебя было) -->
            <Style x:Key="Card" TargetType="Frame">
                <Setter Property="Padding" Value="24" />
                <Setter Property="CornerRadius" Value="24" />
                <Setter Property="HasShadow" Value="False" />
                <Setter Property="BackgroundColor" Value="#B3000000" />
                <Setter Property="BorderColor" Value="#40FFFFFF" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid Padding="16" RowDefinitions="Auto,*" ColumnDefinitions="*,Auto">

            <!-- КНОПКА МУЗЫКИ: увеличена, без чёрного круга -->
            <ImageButton Grid.Row="0" Grid.Column="1"
                         x:Name="BtnMusic"
                         Source="music_on.png"
                         WidthRequest="64" HeightRequest="64"
                         Padding="6"
                         Aspect="AspectFit"
                         BackgroundColor="Transparent"
                         CornerRadius="0"
                         Clicked="BtnMusic_Clicked" />

            <!-- Центральная карточка с кнопками -->
            <Frame Grid.Row="1" Grid.ColumnSpan="2"
                   Style="{StaticResource Card}"
                   VerticalOptions="Center" HorizontalOptions="Center">
                <VerticalStackLayout Spacing="14" WidthRequest="300">
                    <Label Text="ПАЗЛ-КВЕСТ"
                           FontSize="28" FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="White" />

                    <Button Text="Новая игра"
                            Style="{StaticResource MenuButton}"
                            Clicked="NewGame_Clicked"/>

                    <Button Text="Рейтинг"
                            Style="{StaticResource MenuButton}"
                            Clicked="Rating_Clicked"/>

                    <Button Text="Выход"
                            Style="{StaticResource MenuButton}"
                            BackgroundColor="#E04D5A"
                            Clicked="Exit_Clicked"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
