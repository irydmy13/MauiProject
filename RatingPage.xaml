<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiProject.RatingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Рейтинг">

    <VerticalStackLayout Padding="12" Spacing="12">
        <Label Text="Лучшие результаты" FontSize="26" />
        <CollectionView x:Name="ScoresView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" Margin="0,4"
                 BackgroundColor="{StaticResource Card}"
                 BorderColor="{StaticResource CardBorder}"
                 CornerRadius="14" HasShadow="False">
                        <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto">
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Name}" FontSize="18" />
                            <Label Grid.Row="0" Grid.Column="1"
                     Text="{Binding Time, StringFormat='{}{0:mm\\:ss}'}" />
                            <Label Grid.Row="0" Grid.Column="2"
                     Text="{Binding Level, StringFormat='Ур. {0}'}" />
                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" FontSize="12"
                     TextColor="{StaticResource TextSecondary}"
                     Text="{Binding When, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Очистить рейтинг" Style="{StaticResource BtnGhost}" Clicked="Clear_Clicked" />
    </VerticalStackLayout>
</ContentPage>
