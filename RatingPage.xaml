<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiProject.RatingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Рейтинг">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Лучшие результаты (по времени)" FontSize="22" />
        <CollectionView x:Name="ScoresView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Name}" FontAttributes="Bold" />
                        <Label Grid.Row="0" Grid.Column="1"
                   Text="{Binding Time, StringFormat='{}{0:mm\\:ss}'}" />
                        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontSize="12"
                   Text="{Binding When, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Очистить рейтинг" Clicked="Clear_Clicked" />
    </VerticalStackLayout>
</ContentPage>
